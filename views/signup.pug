extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // Registration form
        form(method='POST' action='/signup')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='password') Password:
            input#pw.form-control(type='password' placeholder='Must be at least 8 characters' name='password')
          div.form-group
            label(for='confirmPassword') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
